doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    
    // SEO Meta
    meta(name="description", content=#{ques.Topic})
    meta(name="keywords", content="Qastra, questions, answers, community, knowledge, forum, topics")
    meta(name="author", content="Qastra Team")
    meta(name="robots", content="index, follow")

    // Open Graph (Facebook, LinkedIn)
    meta(property="og:title", content="Qastra – Share and Explore Questions")
    meta(property="og:description", content="Join Qastra to ask meaningful questions and engage with a growing knowledge community.")
    meta(property="og:image", content="https://qastra.onrender.com/media/Qastra.jpeg") 
    meta(property="og:url", content="https://qastra.onrender.com")
    meta(property="og:type", content="website")

    // Twitter Card
    meta(name="twitter:card", content="summary_large_image")
    meta(name="twitter:title", content="Qastra – Share and Explore Questions")
    meta(name="twitter:description", content="Join Qastra to ask meaningful questions and engage with a growing knowledge community.")
    meta(name="twitter:image", content="https://qastra.onrender.com/media/Qastra.jpeg")

    // Icons and Title
    link(rel="shortcut icon", href="/media/Qastra.jpeg", type="image/x-icon")
    title Qastra

    // CSS
    link(rel="stylesheet", href="/css/AskedQuestion.css")
  body
    include ./PreLoader.pug
    .background
      img(src="/media/interface-background-4.jpeg", alt="")
      .shade
    .navigation
      .logo
        img(src="/media/Qastra.jpeg", alt="Logo")
        h2 Qastra
    .quest
      .btns
        a(href=`/save/${ques.QID}` id="save") Save
        a(href=`/report/${ques.QID}`) Report
      h1 Topic: #{ques.Topic}
      h4 Question: #{ques.Question}
    h2(style="text-align: center;margin: 10px;color: #b4b4b4;") Answers
    .answer
      form(action=`/answer/${ques.QID}`, method="post")
        textarea(id="", required, autofocus, name="answer")
        input(type="submit", value="Send Opinoin")
    .answers
      each a in ans
        .card
          h5 #{a.authorName}
          p(style="white-space: pre-wrap; word-wrap: break-word; overflow-wrap: break-word;") #{a.Answer}
    .ads
      iframe(data-aa='2391284', src='//ad.a-ads.com/2391284?size=970x90', style='width:970px; height:90px; border:0px; padding:0; overflow:hidden; background-color: transparent;')
    include ./footer.pug
