doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/css/Guidelines.css")
    style.
      body{
        background: #000;
      }
      .blog-gallery {
        margin-top: 60vh;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 2em;
        padding: 2em;
        padding-top: 4em;
      }
      .img-box {
        background: #2d0a49;
        padding: 1em;
        border-radius: 8px;
        break-inside: avoid;
      }
      .img-box img {
        width: 100%;
        height: auto;
        border-radius: 6px;
        display: block;
      }
    title Qastra Blog
  body
    include ./PreLoader.pug
    .background
      img(src="/media/interface-background-3.jpeg", alt="")
      .shade
    .mains
      h1 Qastra
      h4 One Question Closer to Clarity
      h1 Blog

    .blog-gallery
      each file in mediaFiles
        .img-box
          img(src=`${file.url}` alt="Uploaded media")