doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/css/SavedQuestions.css")
    link(rel="shortcut icon", href="/media/Qastra.jpeg", type="image/x-icon")
    title Qastra: Notifications
  body
    include ./PreLoader.pug
    .background
      img(src="/media/interface-background-3.jpeg", alt="")
      .shade
    .main
      h1 Qastra
      h4 Notifications
    .questions
      each q in notifications
        .question
          a(href=`/question/${q.message}`)
            .topic #{q.Topic} Someone answered your question...
            p.ques Click to Check
    script(src="/js/SavedQuestions.js")
    include ./footer.pug
