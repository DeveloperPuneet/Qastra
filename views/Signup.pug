doctype html
html(lang="en")
    head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    
    // SEO Meta – lighter because it’s a signin page
    meta(name="description", content="Sign up to your Qastra account to explore topics, ask questions, and join the discussion.")
    meta(name="robots", content="noindex, follow") 
    meta(name="author", content="Qastra Team")

    // Open Graph (Optional for login page, but still good for brand presence)
    meta(property="og:title", content="Sign in – Qastra")
    meta(property="og:description", content="Welcome back! Sign in to your Qastra account to connect with the community.")
    meta(property="og:image", content="https://qastra.onrender.com/media/Qastra.jpeg")
    meta(property="og:url", content="https://qastra.onrender.com/signin")
    meta(property="og:type", content="website")

    // Twitter Card
    meta(name="twitter:card", content="summary")
    meta(name="twitter:title", content="Sign in – Qastra")
    meta(name="twitter:description", content="Welcome back! Sign in to your Qastra account to connect with the community.")
    meta(name="twitter:image", content="https://qastra.onrender.com/media/Qastra.jpeg")

    // Icons and Title
    link(rel="shortcut icon", href="/media/Qastra.jpeg", type="image/x-icon")
    title Qastra: Signin

    // CSS
    link(rel="stylesheet", href="/css/Signin.css")
    body
        include ./PreLoader.pug
        .background
            img(src="/media/interface-background-3.jpeg", alt="")
            .shade

        .main
            h1 Qastra
            h4 Create Account
            form(action="/signup", method="post")
                input(
                    type="text", 
                    placeholder="Jhone Dhoe", 
                    required, 
                    autocomplete="off", 
                    spellcheck="false", 
                    autofocus, 
                    name="name"
                )
                input(
                    id="username",
                    type="text", 
                    placeholder="_Jhone_Doe_", 
                    required, 
                    autocomplete="off", 
                    spellcheck="false", 
                    name="username", 
                    pattern="^\\S+$", 
                    title="Username must not contain spaces"
                )
                input(
                    type="email", 
                    placeholder="abc.xyz@mn.com", 
                    required, 
                    autocomplete="off", 
                    spellcheck="false", 
                    name="email"
                )
                input(
                    type="password", 
                    placeholder="**** ****", 
                    required, 
                    autocomplete="off", 
                    spellcheck="false", 
                    name="password", 
                    pattern="^(?=.*[0-9])(?=.*[!@#$%^&*])[A-Za-z\\d!@#$%^&*]{8,}$", 
                    title="Password must be at least 8 characters, include 1 number and 1 special character"
                )
                p Already have an Account? 
                    a(href="/signin") Sign in
                input(type="submit", value="Create Account")
    include ./footer.pug
    script.
        const usernameInput = document.getElementById("username");
        usernameInput.addEventListener("input", () => {
            usernameInput.value = usernameInput.value.replace(/\s/g, "");
        });
    script(src="/js/Signup.js")
